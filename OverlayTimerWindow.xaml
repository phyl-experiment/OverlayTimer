<Window x:Class="OverlayTimer.OverlayTimerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        ResizeMode="CanResize"
        SizeToContent="WidthAndHeight"
        MinWidth="180"
        MinHeight="180"
        MaxWidth="520"
        MaxHeight="520"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        WindowStartupLocation="Manual"
        Left="500"
        Top="60"
        ShowInTaskbar="True"
        Loaded="Window_Loaded">

    <!-- 클릭은 통과시키고, UI는 표시만 -->
    <Grid x:Name="Root" IsHitTestVisible="False" Background="Transparent">

        <Border Background="#66000000"
                CornerRadius="20"
                Padding="18">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock x:Name="ModeText"
                           Text="READY"
                           Foreground="White"
                           FontSize="20"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>

                <Grid x:Name="RingCanvas"
                      Grid.Row="1"
                      Width="220"
                      Height="220"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center">
                    <!-- 배경 링 -->
                    <Ellipse x:Name="BackgroundRing" Stroke="#44FFFFFF" StrokeThickness="14"/>

                    <!-- 진행 링(Arc) -->
                    <Path x:Name="ProgressArc"
                          Stroke="White"
                          StrokeThickness="14"
                          StrokeStartLineCap="Round"
                          StrokeEndLineCap="Round"/>

                    <!-- 남은 시간 -->
                    <TextBlock x:Name="TimeText"
                               Text="0.0"
                               Foreground="White"
                               FontSize="48"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>    
