<Window x:Class="OverlayTimer.DpsRecordViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DPS &#xAE30;&#xB85D; &#xD655;&#xC778;"
        Width="780"
        Height="560"
        MinWidth="600"
        MinHeight="400"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResize"
        Background="#FF1A2530"
        Foreground="White"
        ShowInTaskbar="True"
        Loaded="Window_Loaded">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="#33FFFFFF"
                                BorderThickness="0,0,0,1"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#44AADDFF"/>
                </Trigger>
                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="IsMouseOver" Value="True"/>
                        <Condition Property="IsSelected" Value="False"/>
                    </MultiTrigger.Conditions>
                    <Setter Property="Background" Value="#22FFFFFF"/>
                </MultiTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230" MinWidth="180"/>
            <ColumnDefinition Width="4"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 좌측: 기록 목록 -->
        <Border Grid.Column="0" Background="#FF111E2A" Padding="0">
            <DockPanel>
                <Border DockPanel.Dock="Top"
                        Background="#FF0D1721"
                        Padding="10,8">
                    <TextBlock Text="&#xAE30;&#xB85D; &#xBAA9;&#xB85D;"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Foreground="#FFAADDFF"/>
                </Border>

                <TextBlock x:Name="NoRecordsText"
                           DockPanel.Dock="Top"
                           Text="&#xC800;&#xC7A5;&#xB41C; &#xAE30;&#xB85D;&#xC774; &#xC5C6;&#xC2B5;&#xB2C8;&#xB2E4;."
                           Visibility="Collapsed"
                           Foreground="#FF8899AA"
                           FontSize="12"
                           Margin="10,16,10,0"
                           TextWrapping="Wrap"/>

                <ListBox x:Name="RecordList"
                         Background="Transparent"
                         BorderThickness="0"
                         SelectionChanged="RecordList_SelectionChanged">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock Text="{Binding DateLabel}"
                                           Foreground="#FFCCE8FF"
                                           FontSize="12"
                                           FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding DpsLabel}"
                                           Foreground="#FFFFCC44"
                                           FontSize="11"
                                           Margin="0,1,0,0"/>
                                <TextBlock Text="{Binding DamageLabel}"
                                           Foreground="#FFB3C5D1"
                                           FontSize="11"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </DockPanel>
        </Border>

        <!-- 분리선 -->
        <GridSplitter Grid.Column="1"
                      Width="4"
                      HorizontalAlignment="Stretch"
                      Background="#FF0D1721"/>

        <!-- 우측: 상세 패널 -->
        <Border Grid.Column="2" Background="#FF1A2530" Padding="0">
            <DockPanel>
                <Border DockPanel.Dock="Top"
                        Background="#FF0D1721"
                        Padding="12,8">
                    <TextBlock x:Name="DetailHeader"
                               Text="&#xAE30;&#xB85D;&#xC744; &#xC120;&#xD0DD;&#xD558;&#xC138;&#xC694;"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Foreground="#FFAADDFF"/>
                </Border>

                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled"
                              Padding="12,10">
                    <StackPanel x:Name="DetailPanel"
                                Visibility="Collapsed">

                        <!-- 요약 -->
                        <Border Background="#22FFFFFF"
                                CornerRadius="8"
                                Padding="12,10"
                                Margin="0,0,0,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="DPS"
                                               Foreground="#FF8899AA"
                                               FontSize="11"/>
                                    <TextBlock x:Name="SummaryDps"
                                               FontSize="22"
                                               FontWeight="Bold"
                                               Foreground="#FFFFCC44"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="&#xCD1D; &#xB370;&#xBBF8;&#xC9C0;"
                                               Foreground="#FF8899AA"
                                               FontSize="11"/>
                                    <TextBlock x:Name="SummaryDamage"
                                               FontSize="22"
                                               FontWeight="Bold"/>
                                </StackPanel>
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="&#xCE21;&#xC815; &#xC2DC;&#xAC04;"
                                               Foreground="#FF8899AA"
                                               FontSize="11"/>
                                    <TextBlock x:Name="SummaryDuration"
                                               FontSize="22"
                                               FontWeight="Bold"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- 타격 통계 -->
                        <TextBlock x:Name="SummaryFlags"
                                   Foreground="#FFB3C5D1"
                                   FontSize="12"
                                   Margin="0,0,0,12"/>

                        <!-- 대상별 데미지 -->
                        <TextBlock Text="&#xB300;&#xC0C1;&#xBCC4; &#xB370;&#xBBF8;&#xC9C0;"
                                   Foreground="#FFCCE8FF"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,6"/>
                        <Border Background="#22FFFFFF"
                                CornerRadius="8"
                                Padding="8"
                                Margin="0,0,0,14">
                            <ItemsControl x:Name="DetailTargets">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,3">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="{Binding TargetLabel}"
                                                       Foreground="#FFB3C5D1"
                                                       FontSize="12"
                                                       VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="1"
                                                       Text="{Binding DpsLabel}"
                                                       Foreground="#FFB3DDFF"
                                                       FontSize="12"
                                                       Margin="10,0,0,0"
                                                       VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="2"
                                                       Text="{Binding DamageLabel}"
                                                       Foreground="White"
                                                       FontSize="12"
                                                       FontWeight="SemiBold"
                                                       Margin="10,0,0,0"
                                                       VerticalAlignment="Center"/>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Border>

                        <!-- 스킬별 통계 -->
                        <TextBlock Text="&#xC2A4;&#xD0AC;&#xBCC4; &#xD1B5;&#xACC4;"
                                   Foreground="#FFCCE8FF"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,6"/>
                        <Border Background="#22FFFFFF"
                                CornerRadius="8"
                                Padding="8"
                                Margin="0,0,0,14">
                            <ItemsControl x:Name="DetailSkills">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,3">
                                            <Grid.RowDefinitions>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="{Binding SkillLabel}"
                                                       Grid.Row="0" Grid.Column="0"
                                                       Foreground="White"
                                                       FontSize="12"
                                                       FontWeight="SemiBold"
                                                       VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding RatioLabel}"
                                                       Grid.Row="0" Grid.Column="1"
                                                       Foreground="#FFFFCC44"
                                                       FontSize="12"
                                                       FontWeight="SemiBold"
                                                       VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding FlagLabel}"
                                                       Grid.Row="1" Grid.ColumnSpan="2"
                                                       Foreground="#FFB3C5D1"
                                                       FontSize="11"
                                                       Margin="0,1,0,0"/>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Border>

                        <!-- 버프 가동률 -->
                        <TextBlock Text="&#xBC84;&#xD504; &#xAC00;&#xB3D9;&#xB960;"
                                   Foreground="#FFCCE8FF"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,6"/>
                        <Border Background="#22FFFFFF"
                                CornerRadius="8"
                                Padding="8">
                            <ItemsControl x:Name="DetailBuffs">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,3">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="{Binding BuffLabel}"
                                                       Foreground="White"
                                                       FontSize="12"
                                                       VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="1"
                                                       Text="{Binding UptimeLabel}"
                                                       Foreground="#FFFFCC44"
                                                       FontSize="12"
                                                       FontWeight="SemiBold"
                                                       VerticalAlignment="Center"/>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Border>

                    </StackPanel>
                </ScrollViewer>
            </DockPanel>
        </Border>
    </Grid>
</Window>
